@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<h2>Ürün Listeleme Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UrunAd</td>
            <td>@x.Marka</td>
            <td>@x.Stok</td>
            <td>@x.AlisFiyat</td>
            <td>@x.SatisFiyat</td>
            <td>@x.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@x.Urunid"class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.Urunid"class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@x.Urunid"class="btn btn-success">Satış Yap</a></td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün</a>
